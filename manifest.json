{
  "name": "LeetCode Helper",
  "description": "Handy tools for LeetCode :)",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/on/16.png",
      "32": "/images/on/32.png",
      "192": "/images/on/192.png",
      "512": "/images/on/512.png"
    }
  },
  "icons": {
    "16": "/images/on/16.png",
    "32": "/images/on/32.png",
    "192": "/images/on/192.png",
    "512": "/images/on/512.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.leetcode.com/*"],
      "js": ["content.js"]
    }
  ]
}
